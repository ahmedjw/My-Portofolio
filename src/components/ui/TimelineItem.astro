---
interface Props {
  role: string;
  company: string;
  period: string;
  description: string;
  highlights: string[];
  technologies: string[];
}

const { role, company, period, description, highlights, technologies } = Astro.props;
---

<div class="timeline-item">
  <div class="timeline-dot"></div>
  <div class="timeline-content">
    <span class="period">{period}</span>
    <h3>{role}</h3>
    <span class="company">{company}</span>
    <p class="description">{description}</p>
    <ul class="highlights">
      {highlights.map((item) => <li>{item}</li>)}
    </ul>
    <div class="tech-tags">
      {technologies.map((tech) => <span class="tag">{tech}</span>)}
    </div>
  </div>
</div>

<style>
  .timeline-item {
    position: relative;
    padding-left: var(--space-10);
    padding-bottom: var(--space-12);
  }

  .timeline-item::before {
    content: '';
    position: absolute;
    left: 7px;
    top: 8px;
    bottom: 0;
    width: 2px;
    background: var(--gradient-primary);
    opacity: 0.3;
    height: 0;
    transition: height 0.8s cubic-bezier(0.22, 1, 0.36, 1);
  }

  .timeline-item.timeline-visible::before {
    height: calc(100% - 8px);
  }

  .timeline-item:last-child::before {
    display: none;
  }

  .timeline-dot {
    position: absolute;
    left: 0;
    top: 6px;
    width: 16px;
    height: 16px;
    border-radius: 50%;
    background: var(--gradient-primary);
    box-shadow: 0 0 0 4px var(--color-bg), 0 0 0 6px var(--color-primary-200);
    transform: scale(0);
    transition: transform 0.4s cubic-bezier(0.22, 1, 0.36, 1);
  }

  .timeline-item.timeline-visible .timeline-dot {
    transform: scale(1);
    animation: dotPulse 1s ease 0.4s;
  }

  .timeline-content {
    background: var(--glass-bg);
    backdrop-filter: blur(var(--glass-blur));
    -webkit-backdrop-filter: blur(var(--glass-blur));
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-lg);
    padding: var(--space-6);
    box-shadow: var(--glass-shadow);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .timeline-content:hover {
    transform: translateX(4px);
    box-shadow: var(--shadow-accent);
  }

  .period {
    display: inline-block;
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--color-primary-600);
    background: var(--color-primary-50);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-full);
    margin-bottom: var(--space-3);
  }

  h3 {
    font-size: var(--text-xl);
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: var(--space-1);
  }

  .company {
    font-size: var(--text-base);
    color: var(--color-text-secondary);
    display: block;
    margin-bottom: var(--space-3);
  }

  .description {
    font-size: var(--text-base);
    color: var(--color-text-secondary);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-4);
  }

  .highlights {
    margin-bottom: var(--space-4);
  }

  .highlights li {
    position: relative;
    padding-left: var(--space-5);
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    line-height: 1.8;
  }

  .highlights li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 10px;
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: var(--gradient-primary);
  }

  .tech-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  .tag {
    font-size: var(--text-xs);
    font-weight: 600;
    color: var(--color-primary-600);
    background: var(--color-primary-50);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-full);
    border: 1px solid var(--color-primary-100);
  }

  @media (prefers-reduced-motion: reduce) {
    .timeline-item::before {
      height: auto;
      transition: none;
    }
    .timeline-dot {
      transform: scale(1);
      transition: none;
    }
    .timeline-item.timeline-visible .timeline-dot {
      animation: none;
    }
  }
</style>
