---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogCard from '../../components/ui/BlogCard.astro';
import ScrollReveal from '../../components/effects/ScrollReveal.astro';

const posts = (await getCollection('blog'))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout title="Blog â€” Ahmed Abu Jwifel" description="Articles on web development, React, and software engineering.">
  <section class="blog-page">
    <div class="container">
      <ScrollReveal>
        <div class="page-header">
          <h1>Blog</h1>
          <p>Thoughts, learnings, and tutorials on web development</p>
        </div>
      </ScrollReveal>

      <div class="blog-grid">
        {posts.map((post, i) => (
          <ScrollReveal delay={i * 100}>
            <BlogCard
              title={post.data.title}
              description={post.data.description}
              pubDate={post.data.pubDate}
              tags={post.data.tags}
              slug={post.id}
            />
          </ScrollReveal>
        ))}
      </div>

      {posts.length === 0 && (
        <div class="empty-state">
          <p>No posts yet. Check back soon!</p>
        </div>
      )}
    </div>
  </section>
</BaseLayout>

<style>
  .blog-page {
    padding: var(--space-32) 0 var(--space-24);
  }

  .page-header {
    text-align: center;
    margin-bottom: var(--space-16);
  }

  .page-header h1 {
    font-size: var(--text-5xl);
    font-weight: 800;
    color: var(--color-text);
    letter-spacing: -0.03em;
    margin-bottom: var(--space-4);
  }

  .page-header p {
    font-size: var(--text-xl);
    color: var(--color-text-secondary);
  }

  .blog-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-6);
    max-width: 900px;
    margin: 0 auto;
  }

  .empty-state {
    text-align: center;
    padding: var(--space-16);
    color: var(--color-text-muted);
    font-size: var(--text-lg);
  }

  @media (max-width: 640px) {
    .blog-grid {
      grid-template-columns: 1fr;
    }
    .page-header h1 {
      font-size: var(--text-4xl);
    }
  }
</style>
